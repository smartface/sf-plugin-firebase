{
	"compilerOptions": {
		"incremental": true,
		"target": "es5",
		"moduleResolution": "node",
		"module": "commonjs",
		"lib": ["ES2015"],
		"checkJs": true,
		"declaration": true,
		"sourceMap": true,
		"outDir": "lib",
		"rootDir": "src",
		"downlevelIteration": true,
		"strict": true,
		"baseUrl": "src",
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": false,
		"strictBindCallApply": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "lib"]
}
